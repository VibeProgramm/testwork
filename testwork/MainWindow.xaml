<Window x:Class="Keyer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keyer" Height="450" Width="800">
    <Grid>
        <Button x:Name="loadImageButton" Content="Load Image" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Click="loadImageButton_Click"/>
        <Label Content="Keying Color:" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="colorTextBox" HorizontalAlignment="Left" Margin="220,10,0,0" VerticalAlignment="Top" Width="100" TextChanged="colorTextBox_TextChanged"/>
        <Button x:Name="saveImageButton" Content="Save Image" HorizontalAlignment="Left" Margin="330,10,0,0" VerticalAlignment="Top" Width="100" Click="saveImageButton_Click"/>
        <Image x:Name="displayImage" HorizontalAlignment="Left" Height="389" Margin="10,59,0,0" VerticalAlignment="Top" Width="770"/>
    </Grid>
</Window>